  <![endif]-->
</head>

<body>
  <nav class="navbar navbar-default navbar-fixed-top">
    <div class="container">
      <div class="navbar-header">
        <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
          <span class="sr-only">Toggle navigation</span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
        </button>
        <a class="navbar-brand" href="/">Nowall</a>
      </div>
      <div id="navbar" class="collapse navbar-collapse">
        <ul class="nav navbar-nav">
          {{navbarLink "Home" "home"}}
          {{navbarLink "Features" "features"}}
          {{navbarLink "Contact" "contact"}}
          {{navbarLink "My Account" "dashboard"}}
        </ul>
        <ul class="nav navbar-nav navbar-right">
          {{#ifLoggedIn}}
            <li><a href="{{urlFor "settings"}}">Settings</a></li>
            <li><a href="{{urlFor "logout"}}" rel="nofollow">Logout</a></li>
          {{/ifLoggedIn}}
        </ul>
      </div><!--/.nav-collapse -->
    </div>
  </nav>

  <div class="container">
    {{flash}}
    {{{body}}}
  </div><!-- /.container -->

  <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js"></script>
  <script>if (!window.jQuery) { document.write('<script src="/js/jquery.min.js"><\/script>'); }</script>
  <script src="/js/bootstrap.min.js"></script>
  <script src="/js/jquery.canvasjs.min.js"></script>
  {{#block "javascript"}}
  {{/block}}
