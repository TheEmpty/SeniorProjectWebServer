<div class="row">
  <div class="col-xs-0 col-md-4">&nbsp;</div>

  <div class="col-md-4">
    <h1>Login</h1>
    <form method="POST" action="{{urlFor "login"}}">
      <div class="form-group">
        <label for="email">Email</label>
        <input type="email" class="form-control" id="email" name="email" value="{{email}}" />
      </div>

      <div class="form-group">
        <label for="password">Password</label>
        <input type="password" class="form-control" id="password" name="password" />
      </div>

      <button type="submit" class="btn btn-default btn-primary">Login</button>
      <a href="{{urlFor "forgotPassword"}}" class="btn btn-info btn-default" style="float: right;">Forgot Password?</a>
    </form>
  </div>

  <div class="clearfix">&nbsp;</div>
</div>
